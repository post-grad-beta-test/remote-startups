{
  "name": "boilerplate-react-webpack",
  "version": "0.2.2",
  "description": "A webpack React starter",
  "repository": "https://github.com/dev-academy-challenges/boilerplate-react-webpack.git",
  "main": "server/index.js",
  "author": "EDA",
  "license": "ISC",
  "scripts": {
    "build": "webpack",
    "client": "webpack-dev-server --hot --inline",
    "dev": "run-p dev:client dev:server",
    "dev:client": "webpack --watch",
    "dev:server": "nodemon server",
    "lint": "eslint client server",
    "postinstall": "husky install",
    "lint:fix": "eslint server client --fix",
    "start": "run-s build server",
    "server": "node server",
    "test": "jest --watchAll",
    "test:CI": "jest"
  },
  
  "husky": {
    "hooks": {
      "pre-commit": "echo \"[Husky] pre-commit\"lint"  ,
      "pre-push": "echo \"[Husky] pre-push\"test:CI"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "jest": {},
  "dependencies": {
    "@hookform/resolvers": "^0.1.1",
    "@sendgrid/mail": "^7.2.6",
    "authenticare": "^0.4.7",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "grommet-icons": "^4.5.0",
    "nan": "^2.14.1",
    "npm-run-all": "^4.1.5",
    "superagent": "^5.3.1",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.0",
    "@testing-library/user-event": "^12.1.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^25.3.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.3.0",
    "eslint": "^7.9.0",
    "eslint-config-eda": "^0.1.1",
    "file-loader": "^6.1.0",
    "grommet": "^2.15.0",
    "husky": "^5.0.4",
    "jest": "^25.3.0",
    "knex": "^0.21.5",
    "nock": "^13.0.4",
    "nodemon": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^6.8.6",
    "react-images-upload": "^1.2.8",
    "react-redux": "^7.2.1",
    "react-spring": "^8.0.27",
    "redux": "^4.0.5",
    "sqlite3": "^5.0.0",
    "style-loader": "^1.2.1",
    "styled-components": "^5.2.0",
    "supertest": "^4.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
